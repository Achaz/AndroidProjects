<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="match_parent">
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff5bc0de"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp" >
        
        <LinearLayout 
			android:orientation="vertical" 
			android:background="@drawable/card_background" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content">
       		<LinearLayout 
				 android:gravity="center" 
				 android:id="@+id/emailAddress" 
				 android:layout_width="fill_parent" 
				 android:layout_height="48.0dip" 
				 android:layout_margin="10.0dip"
				 android:layout_marginLeft="10.0dip" 
				 android:layout_marginRight="10.0dip">
     
              <RelativeLayout 
					android:orientation="vertical" 
					android:layout_width="0.0dip" 
					android:layout_height="fill_parent" 
					android:layout_weight="80.0">
                    <com.beardedhen.androidbootstrap.BootstrapEditText 
						android:textSize="@dimen/textsizeNormal" 
						android:textColor="@color/grey" 
						android:textColorHint="@color/textColorDefault" 
						android:gravity="left|center" 
						android:id="@+id/reg_username" 
						android:layout_width="fill_parent" 
						android:layout_height="fill_parent" 
						android:layout_marginLeft="5.0dip" 
						android:layout_marginRight="5.0dip" 
						android:hint="Enter Username" 
						android:singleLine="true" 
						android:inputType="text" />
                    
                </RelativeLayout>
                </LinearLayout>
                <LinearLayout 
						android:gravity="center" 
						android:id="@+id/enterPass" 
						android:layout_width="fill_parent" 
						android:layout_height="48.0dip" 
						android:layout_margin="10.0dip"
					    android:layout_marginLeft="10.0dip" 
						android:layout_marginRight="10.0dip">
                
                        <RelativeLayout 
							android:orientation="vertical" 
							android:layout_width="0.0dip" 
							android:layout_height="fill_parent" 
							android:layout_weight="80.0">
                            <com.beardedhen.androidbootstrap.BootstrapEditText 
								android:textSize="@dimen/textsizeNormal" 
								android:textColor="@color/grey" 
								android:textColorHint="@color/textColorDefault" 
								android:gravity="left|center" 
								android:id="@+id/reg_password" 
								android:layout_width="fill_parent" 
								android:layout_height="fill_parent" 
								android:layout_marginLeft="5.0dip" 
								android:layout_marginRight="5.0dip" 
								android:hint="Enter Password" 
								android:password="true" 
								android:singleLine="true" />
                          
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout 
						 android:gravity="center" 
						 android:layout_width="fill_parent" 
						 android:layout_height="48.0dip" 
						 android:layout_margin="10.0dip"
						 android:layout_marginLeft="10.0dip" 
						 android:layout_marginRight="10.0dip">
     
	              	<RelativeLayout 
						android:orientation="vertical" 
						android:layout_width="0.0dip" 
						android:layout_height="fill_parent" 
						android:layout_weight="80.0">
	                    <com.beardedhen.androidbootstrap.BootstrapEditText 
							android:textSize="@dimen/textsizeNormal" 
							android:textColor="@color/grey" 
							android:textColorHint="@color/textColorDefault" 
							android:gravity="left|center" 
							android:id="@+id/reg_name" 
							android:layout_width="fill_parent" 
							android:layout_height="fill_parent" 
							android:layout_marginLeft="5.0dip" 
							android:layout_marginRight="5.0dip" 
							android:hint="Enter Name" 
							android:singleLine="true" 
							android:inputType="text" />
                   
                   </RelativeLayout>
                </LinearLayout>
                
                <LinearLayout 
			 		android:gravity="center" 
					android:layout_width="fill_parent" 
			 		android:layout_height="48.0dip" 
			 		android:layout_margin="10.0dip"
				    android:layout_marginLeft="10.0dip" 
				    android:layout_marginRight="10.0dip">
     
	              	<RelativeLayout 
						android:orientation="vertical" 
						android:layout_width="0.0dip" 
						android:layout_height="fill_parent" 
						android:layout_weight="80.0">
	                    <com.beardedhen.androidbootstrap.BootstrapEditText 
							android:textSize="@dimen/textsizeNormal" 
							android:textColor="@color/grey" 
							android:textColorHint="@color/textColorDefault" 
							android:gravity="left|center" 
							android:id="@+id/email" 
							android:layout_width="fill_parent" 
							android:layout_height="fill_parent" 
							android:layout_marginLeft="5.0dip" 
							android:layout_marginRight="5.0dip" 
							android:hint="Enter Email" 
							android:singleLine="true" 
							android:inputType="textEmailAddress" />
                    
                   	</RelativeLayout>
	                </LinearLayout>
	                <LinearLayout 
						android:gravity="center" 
						android:layout_width="fill_parent" 
						android:layout_height="48.0dip"
						android:layout_margin="10.0dip"
						android:layout_marginLeft="10.0dip" 
						android:layout_marginRight="10.0dip">
                
                        <RelativeLayout 
							android:orientation="vertical" 
							android:layout_width="0.0dip" 
							android:layout_height="fill_parent" 
							android:layout_weight="80.0">
                            <com.beardedhen.androidbootstrap.BootstrapEditText 
								android:textSize="@dimen/textsizeNormal" 
								android:textColor="@color/grey" 
								android:textColorHint="@color/textColorDefault" 
								android:gravity="left|center" 
								android:id="@+id/tel" 
								android:layout_width="fill_parent" 
								android:layout_height="fill_parent" 
								android:layout_marginLeft="5.0dip" 
								android:layout_marginRight="5.0dip" 
								android:hint="Enter Telephone" 
								android:password="true" 
								android:singleLine="true" />
                            
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout 
						android:gravity="center" 
						android:layout_width="fill_parent" 
						android:layout_height="48.0dip" 
						android:layout_margin="10.0dip"
						android:layout_marginLeft="10.0dip" 
						android:layout_marginRight="10.0dip">
                
                        <RelativeLayout 
							android:orientation="vertical" 
							android:layout_width="0.0dip" 
							android:layout_height="fill_parent" 
							android:layout_weight="80.0">
                            <com.beardedhen.androidbootstrap.BootstrapEditText 
								android:textSize="@dimen/textsizeNormal" 
								android:textColor="@color/grey" 
								android:textColorHint="@color/textColorDefault" 
								android:gravity="left|center" 
								android:id="@+id/opening_bal" 
								android:layout_width="fill_parent" 
								android:layout_height="fill_parent" 
								android:layout_marginLeft="5.0dip" 
								android:layout_marginRight="5.0dip" 
								android:hint="Opening Balance" 
								android:password="true" 
								android:singleLine="true" />
                            
                        </RelativeLayout>
                    </LinearLayout>
                   <LinearLayout 
					 android:gravity="center" 
					 android:layout_width="fill_parent" 
					 android:layout_height="48.0dip" 
					 android:layout_margin="10.0dip"
				     android:layout_marginLeft="10.0dip" 
					 android:layout_marginRight="10.0dip">
	                <RelativeLayout 
						android:orientation="vertical" 
						android:layout_width="0.0dip" 
						android:layout_height="fill_parent" 
						android:layout_weight="80.0">
	                    <com.beardedhen.androidbootstrap.BootstrapEditText 
							android:textSize="@dimen/textsizeNormal" 
							android:textColor="@color/grey" 
							android:textColorHint="@color/textColorDefault" 
							android:gravity="left|center" 
							android:id="@+id/location" 
							android:layout_width="fill_parent" 
							android:layout_height="fill_parent" 
							android:layout_marginLeft="5.0dip" 
							android:layout_marginRight="5.0dip" 
							android:hint="Enter Location" 
							android:singleLine="true" 
							android:inputType="text" />
                  </RelativeLayout>
                </LinearLayout>
                <LinearLayout 
					android:gravity="center_horizontal" 
					android:orientation="vertical" 
					android:layout_width="fill_parent" 
					android:layout_height="fill_parent">
                <ImageView 
					android:background="@android:color/transparent" 
					android:layout_width="fill_parent" 
					android:layout_height="20.0dip" />
                <RelativeLayout 
					android:id="@+id/signInRel" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" 
					android:layout_margin="2.0dip">
                    <com.beardedhen.androidbootstrap.BootstrapButton 
						android:textSize="@dimen/textsizeNormal" 
						android:textColor="@color/white" 
						android:id="@+id/btn_register" 
						android:padding="10.0dip" 
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content" 
						bootstrapbutton:bb_icon_left="fa-thumb-tack"
                		bootstrapbutton:bb_type="info"
						android:text="Sign Up" />
                </RelativeLayout>
               </LinearLayout>
              <LinearLayout 
					android:gravity="center_horizontal" 
					android:orientation="vertical" 
					android:layout_width="fill_parent" 
					android:layout_height="fill_parent"> 
         	  <TextView 
	            android:id="@+id/register_error"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:textColor="#e30000"
	            android:padding="3dip"
	            android:textStyle="bold"/>
   			</LinearLayout>
 		</LinearLayout>
 	</LinearLayout>	
 </RelativeLayout>
</ScrollView>
